{
  "name": "gvv",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "description": "一键 git 提交: git add + git commit + git push",
  "scripts": {
    "beautify": "npm run eslint && npm run prettier",
    "build": "jja cls rm dist && rollup --config rollup.config.js && npm run clean:package",
    "clean:package": "node scripts/clean-package-json.js",
    "dev": "npm run build &&GVV_DEV=all node --trace-warnings dist/bin.mjs",
    "diff": "jja pkg -d",
    "eslint": "eslint src",
    "prettier": "prettier . --write",
    "push:version": "npm run build && node dist/bin.mjs kind=version",
    "push:submit": "npm run build && node dist/bin.mjs kind=submit",
    "test": "jja cls && lint-staged && jest --coverage",
    "vjj": "jja cls && vjj",
    "prepublishOnly": "jja cls && pjj",
    "prepare": "husky"
  },
  "license": "MIT",
  "dependencies": {
    "@qqi/dev-log": "^1.0.1",
    "a-command": "^2.2.5",
    "a-js-tools": "^1.0.0",
    "a-node-tools": "^4.2.3",
    "a-type-of-js": "^1.0.1",
    "color-pen": "^2.0.10"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@qqi/check-version": "^1.0.0",
    "@qqi/rollup-external": "^1.0.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "codecov": "^3.8.3",
    "coveralls": "^3.1.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsdoc": "^50.7.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jest-junit": "^16.0.0",
    "jja": "^2.3.5",
    "lint-staged": "^16.1.0",
    "pjj": "^1.0.0",
    "prettier": "^3.5.3",
    "rollup": "^4.41.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.3.4",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vjj": "^1.0.2"
  }
}
