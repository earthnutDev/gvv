{
  "name": "gvv",
  "type": "module",
  "version": "0.1.5",
  "private": true,
  "description": "一键 git 提交: git add + git commit + git push",
  "scripts": {
    "beautify": "pnpm run eslint && pnpm run prettier",
    "local": "node ./scripts/build-local.js",
    "build": "jja cls rm dist && rollup --config rollup.config.js && pnpm run clean:package",
    "clean:package": "node scripts/clean-package-json.js",
    "dev": "pnpm run build &&gvv_dev=all node  --trace-warnings dist/bin.mjs",
    "diff": "jja pkg -d",
    "eslint": "eslint src",
    "prettier": "prettier . --write",
    "push:version": "pnpm run build && node dist/bin.mjs kind=version",
    "push": "pnpm run build && node dist/bin.mjs",
    "test": "jja cls && lint-staged && jest --coverage",
    "vjj": "jja cls && vjj -b",
    "prepublishOnly": "jja cls && pjj",
    "prepare": "husky"
  },
  "license": "MIT",
  "dependencies": {
    "@qqi/log": "^0.1.0",
    "a-command": "^2.3.13",
    "a-js-tools": "^1.0.9",
    "a-node-tools": "^4.2.16",
    "a-type-of-js": "^1.0.5",
    "color-pen": "^2.0.12"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@qqi/check-version": "^1.0.4",
    "@qqi/rollup-external": "^1.0.9",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.1.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^51.4.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jja": "^2.3.12",
    "lint-staged": "^16.1.2",
    "pjj": "^1.0.3",
    "prettier": "^3.6.2",
    "rollup": "^4.45.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vjj": "^1.0.9"
  }
}
